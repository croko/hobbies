<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:partner_id) %></th>
    <th><%= model_class.human_attribute_name(:seats) %></th>
    <th><%= model_class.human_attribute_name(:seats_used) %></th>
    <th>Buy</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @classrooms.each do |classroom| %>
    <tr>
      <td><%= link_to classroom.id, classroom_path(classroom) %></td>
      <td><%= classroom.name %></td>
      <td><%= classroom.partner.name %></td>
      <td><%= classroom.seats %></td>
      <td><%= classroom.seats_used.to_i %></td>
      <td><%= link_to "Buy", buy_classroom_path(classroom), remote: true %></td>
      <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_classroom_path(classroom), :class => 'btn btn-mini' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    classroom_path(classroom),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>